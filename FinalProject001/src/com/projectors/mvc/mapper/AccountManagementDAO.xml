	<!-- 입력한 현재 비밀번호가 제대로 입력되었는지 확인 -->
	<select id="checkPw" resultType="java.lang.String">
		SELECT COUNT(*) AS COUNT
		FROM USERS
		WHERE PIN_NO=#{pinNo} AND PW=#{pw}
	</select>

	<!-- 조건 검사 통과 후 수행될 비밀번호 변경 메소드  -->
	<update id="changePw">
		UPDATE USERS
		SET PW = #{newPw}
		WHERE PIN_NO = #{pinNo}	
	</update>

</mapper>